{
  "name": "xakiitoh-program-executor",
  "version": "1.2.3",
  "description": "Ein moderner Programm-Launcher f√ºr xAkiitoh's Stream Tools",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vue\" \"wait-on http://localhost:5176 && npm run dev:electron\"",
    "dev:vue": "vite --port 5176 --host",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:vue && npm run build:electron",
    "build:vue": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "vue",
    "typescript",
    "launcher",
    "stream-tools"
  ],
  "author": "xAkiitoh Stream Tools",
  "license": "SEE LICENSE IN LICENSE.txt",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vue-tsc": "^1.8.22",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "vue": "^3.3.8"
  },
  "build": {
    "appId": "com.xakiitoh.program-executor",
    "productName": "xAkiitoh Program Executor",
    "directories": {
      "output": "release/${version}",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!electron/**/*.ts",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "Programs",
        "to": "Programs-Examples",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": null
  }
}
